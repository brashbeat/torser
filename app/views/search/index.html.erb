<div class="engine-main">
<h1 class="heading-main" title="Torser">&#2335;orser</h1>
<h4 class="subhead-main">Torrent Search Engine</h4>
<%= form_tag('/search/processor') do %>
<p><%= search_field_tag('query') %>&nbsp;&nbsp;<%= select_tag(:scope, options_for_select([['All', 1], ['The Pirate Bay', 2],['YTS', 3],['ExtraTorrent', 4]], 1)) %></p>
