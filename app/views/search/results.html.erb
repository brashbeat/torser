<div class="engine-result">
<h3 class="heading-main">Torser</h3>
<%= form_tag('/search/processor') do %>
<p><%= search_field_tag('query', @query) %></p>
<%= submit_tag('Search') %>
<% end %>
</div>
<h1>Results</h1>
<br>
<p class="nav-link"><%= link_to_if(@pid >= '2', '<<Previous Page', page_path(@pid.to_i - 1)) %>&nbsp;&nbsp;<%= link_to 'Next Page>>', page_path(@pid.to_i + 1) %></p>
<% @results.each do |res| %>
<p><%= res.css('.detLink')[0].text %></p>
<a href="<%= res.css('.detName+ a')[0]['href'].strip %>">Magnet Link</a>
<% end %>
