<div class="engine-result">
<h3 class="heading-main">Torser</h3>
<%= form_tag('/search/processor') do %>
<p><%= search_field_tag('query', @query) %></p>
<%= submit_tag('Search') %>
<% end %>
</div>
<h1>Results</h1>
<br>
<p class="nav-link"><%= link_to_if(@pid >= '2', '<<Previous Page', page_path(@pid.to_i - 1)) %>&nbsp;&nbsp;<%= link_to 'Next Page>>', page_path(@pid.to_i + 1) %></p>

<% @results.each do |result, info| %>
<% info = result.xpath("td[not(@class='vertTh')]") %>
<div style="border:solid 2px ; border-radius:4px;">
<p><%= info[0].css('a.detLink')[0]['title'].gsub('Details for', "").strip %></p>
<p>Info: <%= info[0].css('font.detDesc')[0].text %>&nbsp;&nbsp;<a href="<%= info[0].css('.detName+ a')[0]['href'] %>">Magnet Link</a>&nbsp;&nbsp;Seeders: <%= info[1].text %>&nbsp;&nbsp;Leechers: <%= info[2].text %></p>
</div>
<% end %>